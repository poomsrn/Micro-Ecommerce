= simple_form_for(@item) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  .simple_form-inputs
    .container-sm
      .col-md-6.col-sm-12
        .row
          = f.input :name
        .row
          = f.input :price
        .row
          = f.input :quantity
        .row  
          = f.input :description
        .row
          = f.file_field :avatar
  %br
  .form-actions
    .col-md-6.col-sm-12
      .d-grid.gap-2.d-md-flex.justify-content-md-center
        %input.btn.btn-outline-success{:type => "submit", :value => "OK"}/
        %a.btn.btn-outline-primary{:href => @user, :role => "button"} cancel